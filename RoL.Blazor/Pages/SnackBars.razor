@inject HttpClient Http
@inject ISnackbar _snackbar

@code {
    public async Task ShowError(string message, string position = Defaults.Classes.Position.BottomLeft)
    {
        if(char.IsLower(message[0]))
        {
            message = char.ToUpper(message[0]) + message[1..];
        }

        _snackbar.Configuration.PositionClass = position;
        await Task.Run(() => _snackbar.Add(message, Severity.Error));
    }

    public async Task ShowSuccess(string position = Defaults.Classes.Position.BottomLeft)
    {
        _snackbar.Configuration.PositionClass = position;
        await Task.Run(() => _snackbar.Add("Successfully", Severity.Success));
    }
}