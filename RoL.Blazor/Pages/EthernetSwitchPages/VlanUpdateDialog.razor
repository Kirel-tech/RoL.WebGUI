@page "/VlanUpdateDialog"
@using RoL.Dtos.EthernetSwitchDtos
@using RoL.Dtos
@using System.Text.Json
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer xs="12" Class="mx-auto px-4 justify-center my-4 mud-text-align-center" Style="max-height: 700px; width: 600px; overflow-y: scroll">
            <b>Tagged Ports</b>
            @foreach(var taggedPort in _taggedPorts)
            {
                <MudItem xs="12" Class="d-flex flex-row">
                    <MudSelect Class="ml-1" @bind-Value="@taggedPort.Id" Variant="Variant.Outlined" Margin="Margin.Dense">
                        @foreach (var port in _ports)
                        {
                            <MudSelectItem T="string" Value="@port.Id">@port.Name</MudSelectItem>
                        }
                    </MudSelect>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" Class="ma-n1" OnClick="@(() => DeleteTaggedPort(taggedPort))"/>
                </MudItem>
            }
            <MudIconButton Class="d-flex flex-row my-n1" Icon="@Icons.Material.Rounded.Add" OnClick="@AddTaggedPort" Color="Color.Success" aria-label="add"></MudIconButton>
            <MudDivider Class="mt-2 mb-1"></MudDivider>
            <b>Untagged Ports</b>
            @foreach(var untaggedPort in _untaggedPorts)
            {
                <MudItem xs="12" Class="d-flex flex-row">
                    <MudSelect Class="ml-1" @bind-Value="@untaggedPort.Id" Variant="Variant.Outlined" Margin="Margin.Dense">
                        @foreach (var port in _ports)
                        {
                            <MudSelectItem T="string" Value="@port.Id">@port.Name</MudSelectItem>
                        }
                    </MudSelect>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" Class="ma-n1" OnClick="@(() => DeleteUntaggedPort(untaggedPort))"/>
                </MudItem>
            }
            <MudIconButton Class="d-flex flex-row my-n1" Icon="@Icons.Material.Rounded.Add" OnClick="@AddUntaggedPort" Color="Color.Success" aria-label="add"></MudIconButton>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Update">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string EthernetSwitchId { get; set; } = "";
    [Parameter]
    public EthernetSwitchVlanDto Vlan { get; set; } = new();

    private EthernetSwitchVlanUpdateDto _vlanPutRequest = new();
    private List<PortSelectItem> _taggedPorts = new();
    private List<PortSelectItem> _untaggedPorts = new();
    private List<EthernetSwitchPortDto> _ports = new();
    
    public class PortSelectItem
    {
        public string? Name { get; set; }
        public string? Id { get; set; }
    }
    
    void Cancel() => MudDialog.Cancel();

    protected override void OnInitialized()
    {
        _vlanPutRequest = new EthernetSwitchVlanUpdateDto()
        {
            UntaggedPorts = Vlan.UntaggedPorts, 
            TaggedPorts = Vlan.TaggedPorts
        };
    }
    protected override async Task OnInitializedAsync()
    {
        var response = await Http.GetFromJsonAsync<PaginatedItemsDto<List<EthernetSwitchPortDto>>>($"ethernet-switch/{EthernetSwitchId}/port/");
        if (response != null) _ports = response.Items;
        
        foreach (var taggedPort in _vlanPutRequest.TaggedPorts)
        {
            if (_ports == null) continue;
            foreach (var portId in _ports.Where(portId => portId.Id == taggedPort))
            {
                _taggedPorts.Add(new PortSelectItem {Name = portId.Name, Id = portId.Id});
            }
        }
        foreach (var untaggedPort in _vlanPutRequest.UntaggedPorts)
        {
            if (_ports == null) continue;
            foreach (var portId in _ports.Where(portId => portId.Id == untaggedPort))
            {
                _untaggedPorts.Add(new PortSelectItem {Name = portId.Name, Id = portId.Id});
            }
        }
    }
    private async void Update()
    {
        _vlanPutRequest.TaggedPorts = new List<string>();
        _vlanPutRequest.UntaggedPorts = new List<string>();
        _vlanPutRequest.TaggedPorts.AddRange(_taggedPorts.Select(s => s.Id)!);
        _vlanPutRequest.UntaggedPorts.AddRange(_untaggedPorts.Select(a => a.Id)!);
        var responseVlan = await Http.PutAsJsonAsync($"ethernet-switch/{EthernetSwitchId}/vlan/{Vlan.Id}", _vlanPutRequest);
        if (responseVlan.IsSuccessStatusCode)
        {
            Snackbar.Add("Success", Severity.Success, options => options.CloseAfterNavigation = true);
            await Task.Run(() => MudDialog.Close(DialogResult.Ok(true)));
        }
        else
        {
            var errorContent = await responseVlan.Content.ReadAsStringAsync();
            var validationErrors = JsonSerializer.Deserialize<ValidationErrorDto>(errorContent)!;

            foreach (var error in validationErrors.Errors)
            {
                Snackbar.Add($"{error.Field + ": " + error.Error}", Severity.Error, options => options.CloseAfterNavigation = true);
            }
        }
    }
    
    private void AddUntaggedPort()
    {
        _untaggedPorts.Add(new PortSelectItem(){Id = string.Empty});
    }
    private void DeleteUntaggedPort(PortSelectItem port)
    {
        _untaggedPorts.Remove(port);
    }
    private void AddTaggedPort()
    {
        _taggedPorts.Add(new PortSelectItem(){Id = string.Empty});
    }
    private void DeleteTaggedPort(PortSelectItem port)
    {
        _taggedPorts.Remove(port);
    }
}